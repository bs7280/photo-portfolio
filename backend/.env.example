# Server configuration
PORT=5001
BACKEND_URL=http://localhost:5001

# Edit mode - set to true for local editing
# Default (if not set): false (read-only mode for production)
EDIT_MODE=true

# Database path for photo metadata
DATABASE_PATH=./photos_metadata.db

# Local development - use local files
PHOTOS_DIR=./photos
USE_CDN=false
CDN_BASE_URL=

# Cloudflare R2 configuration
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=photography-portfolio
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Production with R2
# USE_CDN=true
# CDN_BASE_URL=https://pub-xxxxx.r2.dev
# BACKEND_URL=https://your-backend.com
